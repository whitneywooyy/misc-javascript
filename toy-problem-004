// Write a function that takes an array and replaces all of the odd numbers with the letter 'O'.


var someArray = [1, 2, 3, 4, 5, 6, 7];

var replacer = function(arr) {
    for (var i = 0; i < arr.length; i++) {
        if (arr[i] % 2 !== 0) {
            arr[i] = 'O';    
        }
    }
    return arr;
};
console.log(replacer(someArray));


// SEE IT IN ACTION: http://jsfiddle.net/whitneywooyy/p73up2gm/
